# Copia este archivo como .env y completa las variables

# URL de la API (cambiar según el entorno)
# Para desarrollo local: http://localhost:3001/api
# Para producción: https://tu-backend-en-produccion.com/api
VITE_API_URL=http://localhost:3001/api

# MongoDB Atlas URI
VITE_MONGO_URI=tu_mongo_atlas_uri_aqui

# JWT Secret (generar una clave segura)
JWT_SECRET=tu_clave_jwt_secreta_y_unica_aqui

# Puerto del servidor (opcional, por defecto 3001)
PORT=3001
